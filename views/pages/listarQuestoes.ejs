<head>
    <link rel="stylesheet" href="stylesheets/listarQuestoesPage-styles.css">
</head>

<div class="listaQuestoes">
    <table>
        <thead>
            <tr>
                <% if (questoes.length === 0) { %>

                <div class="questao_vazia"><h3>Nenhuma questÃ£o registrada</h3></div>
            <% } else { %>
                <th>ID</th>
                <th>Enunciado</th>
                <% } %>
            </tr>
        </thead>
        <tbody>
            <% for (let i = 0; i < questoes.length; i++) { %>
